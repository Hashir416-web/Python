def find_square_values(start, end):
    """
    This function accepts a beginning and end range (inclusive) and returns a dictionary
    where the keys are the numbers in the range and the values are their squares.
    """
    if start > end:
        raise ValueError("Start value must be less than or equal to the end value.")
    
    square_values = {num: num ** 2 for num in range(start, end + 1)}
    return square_values